<link href="https://cdn.quilljs.com/1.0.0/quill.snow.css" rel="stylesheet">

<div class="container">
    <form method="POST">
        <!--begin::Card-->
        <div class="card shadow">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label fw-bold">Infomation</h3>
                </div>
            </div>
            <!--begin::Form-->
            <div class="card-body p-0">
                <div class="form-group row justify-content-md-center  my-2">
                    <label class="col-lg-3 fs-4 text-end">Course Name:</label>
                    <div class="col-lg-7">
                        <input type="text" class="form-control" placeholder="Web development" name="name">
                    </div>
                </div>
                <div class="form-group row justify-content-md-center  my-2">
                    <label class="col-lg-3 fs-4 py-0 text-end">Cover Image:</label>
                    <div class="col-xl-7">
                        <div class="image-input image-input-outline" id="kt_image_4"
                            style="background-image: url(/assets/media/users/blank.png)">
                            <label class="btn p-0 d-flex" data-action="change" data-toggle="tooltip" title=""
                                data-original-title="Change avatar">
                                <input id="thumbnail" name="thumbnail" type="file" class="file btn btn-md px-0 me-auto"
                                    data-browse-on-zone-click="true" accept="image/*">
                                <button class="btn btn-outline-secondary" data-action="remove" data-toggle="tooltip"
                                    title="Remove avatar">Remove
                                </button>
                        </div>
                    </div>
                </div>
                <div class="form-group row justify-content-md-center  my-2">
                    <label class="col-lg-3 fs-4 text-end">Category:</label>
                    <div class="col-lg-7">
                        <select class="form-select" aria-label="Default select example">
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>

                    </div>
                </div>
                <div class="form-group row justify-content-md-center  my-2">
                    <label class="col-lg-3 fs-4 text-end">Overall:</label>
                    <div class="col-lg-7">
                        <textarea name="overview" class="form-control" rows="5"
                            placeholder="Introduction to the course"></textarea>
                    </div>
                </div>


                <div class="form-group row justify-content-md-center  my-2">
                    <label class="col-lg-3 text-start py-0 fs-4 text-end">Price:</label>
                    <div class="col-lg-7">
                        <input type="text" name="price_discount" class="form-control" placeholder="10%">
                    </div>
                </div>

                <div class="form-group row justify-content-md-center my-2">
                    <label class="col-lg-3 py-0 fs-4 text-end">Sales:</label>
                    <div class="col-lg-7">
                        <input type="text" name="price_discount" class="form-control" placeholder="10%">
                    </div>
                </div>

            </div>

            <!--end::Form-->
        </div>
        <!--end::Card-->
        <!--begin::Card-->
        <div class="card shadow my-3">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h3 class="fw-bold m-0">Chapters</h3>
                    <button type="button" class="btn btn-secondary text-light fw-bold">Add new
                        chapter</button>
                </div>
            </div>
            <div class="card-body">
                <div>Sau khi click add new chap, cho nay tao ra them 1 dong` roi cho nhap du lieu vao (chua biet lam)
                </div>
            </div>
        </div>
        <!--begin::Form-->

        <input type="text" hidden name="id" value="">

        <div class="card-body">
            <div class="chap-container accordion accordion-light accordion-svg-toggle" numChapter="0">

                <!--begin::Card Chapter-->
                <!--end::Card-->
            </div>
        </div>

        <div class="card card-custom roseanna px-10">
            <div id="toolbar" class="h1">
            </div>
            <div id="editor"></div>

            <!--end::Form-->
        </div>
        <!--end::Card-->
        <div class="d-flex justify-content-center">
            <button type="submit"
                class="btn btn-md btn-secondary text-light fw-bold m-2">&emsp;&emsp;Create&emsp;&emsp;</button>
            <a href="/" class="btn btn-md btn-secondary text-light fw-bold m-2">&emsp;&emsp;Cancel&emsp;&emsp;</a>
        </div>
    </form>
</div>

<table>
    <tbody>
        <tr hidden class="templateLesson">
            <td class="pt-0 py-5 ">
                <i class="fa fas fa-photo-video text-warning icon-xl"></i>
            </td>
            <td>
                <table>
                    <input hidden class="id" type="text" value="new">

                    <div class="row text-dark-75 font-weight-bolder mb-1 font-size-lg">
                        <label class="col-lg-4 text-lg-left">Tên bài học:</label>

                        <div class="col-lg-8">
                            <input class="name form-control col-lg-20" type="text">
                        </div>

                    </div>
                    <div class="row text-dark-75 font-weight-bolder mb-1 font-size-lg">
                        <label data-toggle="modal" data-target="#myModal"
                            class="col-lg-4 col-form-label text-lg-left">URL Video:</label>

                        <div class="col-lg-8">
                            <input class="video form-control col-lg-20" type="text">
                        </div>
                    </div>
                </table>
            </td>

            <td class="text-center">
                <span class="text-dark-75 font-weight-bolder d-block font-size-lg">Time</span>
                <div class="dropdown dropdown-inline show" data-toggle="tooltip" data-placement="left"
                    data-original-title="Xóa bài học">
                    <i class="flaticon-delete btn-dlt-lesson "></i>
                </div>
                <span class="text-dark-50 d-block font-size-lg"> Xem trước
                </span>

                <input class="preview form-check-input" type="checkbox">
            </td>
        </tr>
    </tbody>

</table>

