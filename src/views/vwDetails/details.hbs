{{! Background }}
<style>
  @media screen and (max-width: 768px) {
    #numRateReg {
      display: none;
    }

    #coverImg {
      display: none;
    }

    #coverContent {}
  }
</style>

<div class="container">

  {{! Buy in and description }}

  <div class="bg-dark text-light row border rounded">
    <img src="{{course.img}}" id="coverImg" class="col-md-4 p-0">
    <div class="px-5 py-4 text-start col-md-8" id="coverContent">
      <h1 class="fw-bold">{{course.name}}</h1>
      <p class="fs-5 m-0">{{course.overview}}</p>
      <div class="d-flex">
        <p class="fs-5 m-0 text-secondary me-1">Rating: </p>
        <div class="rating d-flex fs-5">
          <i class="fa fa-star text-secondary" style="line-height: unset" title="Bad"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="Poor"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="OK"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="Good"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="Excellent"></i>
        </div>
        <p class="fs-5 m-0" id="numRateReg">&nbsp;({{course.rating_count}} rating) {{format_number course.register_count}} students
        </p>
      </div>
      <div class="d-flex">
        <div class="d-flex flex-column me-auto">
          <div class="d-flex">
            <p class="fs-5 m-0 text-secondary me-1">Lecturers: </p>
            <a class="fs-5 m-0 text-decoration-none" data-bs-toggle="offcanvas" href="#profile" role="button" aria-controls="offcanvasExample">
              {{course.author}}
            </a>
          </div>
          <div class="d-flex">
            <p class="fs-5 m-0 text-secondary me-1">Lastest Updated: </p>
            <p class="fs-5 m-0">{{format_date course.lastUpdate}}</p>
          </div>
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center">
          <p class="text-secondary m-0 fs-5">{{format_number course.price}} VND</p>
          <button class="btn btn-md btn-secondary text-light fw-bold">Add to cart</button>
        </div>
      </div>

    </div>
    <div class="row bg-secondary rounded-bottom fs-6 p-0 m-0 w-100">
      &nbsp;
    </div>
  </div>

  {{! Body }}
  <hr class="my-5 text-dark" style="height: 1px;" />
  <div class="container-fluid p-0" style="width: 90%">
    <p class="h2 fw-bold">Course Sumary</p>
    <p class="fs-5 px-4 py-1 rounded-bottom rounded-end">{{course.description}}</p>
  </div>
  {{! Accordion }}
  <hr class="my-5 text-dark" style="height: 1px;" />


  <div class="accordion open rounded-end rounded-bottom" id="accordionExample" style="margin-left: 5%; width: 90%;">
    <p class="h2 fw-bold">
      Course Details</p>

    {{!-- {{#each course.chapters}}
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button fw-bold fs-5 py-2" type="button" data-bs-toggle="collapse"
          data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Chapter 1: {{this.name}}
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse fs-5 collapse" aria-labelledby="headingOne"
        data-bs-parent="#accordionExample">
        {{#each this.lessons}}
        <div class="accordion-body py-2">
          {{this.name}}: &nbsp; {{this.video}}
        </div>
        {{/each}}
      </div>
    </div>
    {{/each}} --}}
  </div>

  {{! Recommend }}

  <hr class="my-5 text-dark" style="height: 1px;" />

  <div class="container-fluid p-0" style="width: 90%">
    <p class="h2 fw-bold">Recommend</p>
    <ul class="list-group list-group-flush">
      {{#each rec}}
      <li class="list-group-item d-flex border border-2 shadow p-3">
        <img src="{{this.img}}" style="background-repeat: no-repeat; height: 100px; width: 100px; "
          class="rounded align-self-center" />
        <div class="px-2 me-auto">
          <div class="fs-5 fw-bold m-0">{{this.name}}</div>
          <div class="fs-6">{{this.overview}}</div>
          <span class="fs-5">5<i class="fa fa-star fa-xs text-secondary" style="line-height: unset"></i>&nbsp;<u class="fs-6 text-success">{{this.register_count}} students</u></span>
        </div>
        <div class="px-2 d-flex flex-column align-self-center">
          <button type="button" class="btn btn-secondary btn-lg p-1 mb-1"><a class="links text-light"
              href="/course/{{this.name}}">&nbsp;&nbsp;&nbsp;Visit&nbsp;&nbsp;&nbsp;</a></button>
          <button type="button" class="btn btn-outline-secondary btn-lg p-1"><i class="fas fa-heart"></i></button>
        </div>
      </li>
      {{/each}}
    </ul>

  </div>

  {{! Comment }}
  <hr class="my-5 text-dark " style="height: 1px;" />
  <form method="post">
    <div class="card container-fluid row d-flex justify-content-center mx-auto shadow" style="width: 90%">
      <div class="card-header bg-white">
        <div class="d-flex flex-start">
          <img class="rounded-circle shadow-1-strong me-3"
            src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60" height="60" />
          <div class="form-outline w-100 fs-4">
            <label class="form-label" for="feedback">Message</label>
            <textarea class="form-control" id="content" rows="4" style="background: #fff;" type="text"
              name="content"></textarea>

          </div>
        </div>
        <div class="d-flex justify-content-end pt-1">
          <div>
            <ul class="rating d-inline-flex list-inline mx-3 fs-1 my-0 pt-1" data-mdb-toggle="rating">
              <li><i class="far fa-star fa-sm text-secondary" title="Bad"></i></li>
              <li><i class="far fa-star fa-sm text-secondary" title="Poor"></i></li>
              <li><i class="far fa-star fa-sm text-secondary" title="OK"></i></li>
              <li><i class="far fa-star fa-sm text-secondary" title="Good"></i></li>
              <li><i class="far fa-star fa-sm text-secondary" title="Excellent"></i></li>
            </ul>
          </div>
          <button class="btn btn-secondary btn-lg my-auto" formaction="/course/{{course.name}}/fb" type="submit">Post
            comment</button>
        </div>
      </div>
  </form>
  <hr class="mb-3" style="height: 1px;" />
  {{#each feedbacks}}
  <div class="card-body">
    <div class="d-flex flex-start align-items-center">
      <img class="rounded-circle shadow-1-strong me-3" src="{{this.avatar}}" alt="avatar" width="80" height="80" />
      <div class="me-auto">
        <h6 class="fw-bold mb-1 fs-4">{{this.author}}</h6>
        <p class="text-muted small mb-0 fs-5">
          {{this.time}}
        </p>
      </div>
      <div class="rating d-flex fs-5">
        <i class="far fa-star text-secondary" style="line-height: unset" title="Bad"></i>
        <i class="far fa-star text-secondary" style="line-height: unset" title="Poor"></i>
        <i class="far fa-star text-secondary" style="line-height: unset" title="OK"></i>
        <i class="far fa-star text-secondary" style="line-height: unset" title="Good"></i>
        <i class="far fa-star text-secondary" style="line-height: unset" title="Excellent"></i>
      </div>
    </div>

    <p class="mt-3 mb-4 pb-2 fs-5">
      {{this.content}}
    </p>
  </div>
  <hr class="my-3" style="height: 1px;" />
  {{/each}}
  <ul class="pagination pagination-lg justify-content-center">
    <li class="page-item">
      <a class="page-link text-secondary border-secondary fw-bold" href="?page=" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link text-secondary border-secondary fw-bold" href="?page=">1</a></li>
    <li class="page-item"><a class="page-link text-secondary border-secondary fw-bold" href="?page=">2</a></li>
    <li class="page-item"><a class="page-link text-secondary border-secondary fw-bold" href="?page=">3</a></li>
    <li class="page-item">
      <a class="page-link text-secondary fw-bold border-secondary" href="?page=" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</div>

</div>

<div class="offcanvas offcanvas-start" tabindex="-1" id="profile" aria-labelledby="profileLabel">
  <div class="offcanvas-header">
    <u class="offcanvas-title h1 fw-bold" id="profileLabel">{{course.author}}</u>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div>
      Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
    </div>
  </div>
</div>


