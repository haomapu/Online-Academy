{{! Background }}
<style>
  @media screen and (max-width: 768px){
    #numRateReg{
      display: none;
    }
    #coverImg{
      display: none;
    }
    #coverContent{
      
    }
  }
</style>
<div class="container">

  {{! Buy in and description }}

  <div class="bg-dark text-light row rounded-top">
    <img src="/public/images/login.jpg" id="coverImg" class="col-md-4 p-0">
    <div class="p-5 text-start col-md-8" id="coverContent">
      <h1 class="fw-bold">{{detail.Title}}</h1>
      <p class="fs-4 m-0">Learn Full Stack Web Development Building Over 40+
        Projects (Co chu more de tu navigate toi body)</p>
      <div class="d-flex">
          <p class="fs-5 m-0 text-secondary me-1">Rating: </p>
          <div class="rating d-flex fs-5">
            <i class="fa fa-star text-secondary" style="line-height: unset" title="Bad"></i>
            <i class="far fa-star text-secondary" style="line-height: unset" title="Poor"></i>
            <i class="far fa-star text-secondary" style="line-height: unset" title="OK"></i>
            <i class="far fa-star text-secondary" style="line-height: unset" title="Good"></i>
            <i class="far fa-star text-secondary" style="line-height: unset" title="Excellent"></i>
          </div>
          <p class="fs-5 m-0" id="numRateReg">&nbsp; (2,774 ratings) 13,860 students</p>
      </div>
      <div class="d-flex">
        <div class="d-flex flex-column me-auto">

          <div class="d-flex">
            <p class="fs-5 m-0 text-secondary me-1">Lecturers: </p>
            <p class="fs-5 m-0">{{detail.Lecturers}}</p>
          </div>

          <div class="d-flex">
            <p class="fs-5 m-0 text-secondary me-1">Lastest Updated: </p>
            <p class="fs-5 m-0">09/12/2022</p>
          </div>
        </div>
        <button class="btn btn-lg btn-secondary">Add to cart</button>

      </div>
    </div>

  </div>
  <div class="row">
    <div class="bg-secondary rounded-bottom">&nbsp;</div>
  </div>
  {{! Body }}
  <hr class="my-5 text-dark" style="height: 1px;" />
  <div class="container-fluid p-0" style="width: 90%">

    <p class="h2 fw-bold">Course Sumary</p>
    <p class="fs-5 px-4 py-1 rounded-bottom rounded-end">Lorem ipsum dolor
      sit amet, consectetur adipiscing elit, sed do Lorem ipsum
      dolor sit amet, consectetur adipiscing elit, sed do Lorem ipsum dolor sit
      amet, consectetur adipiscing elit, sed do Lorem ipsum dolor sit amet,
      consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et
      dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
      ullamco laboris nisi ut aliquip consequat.</p>
  </div>
  {{! Accordion }}
  <hr class="my-5 text-dark" style="height: 1px;" />


  <div class="accordion open rounded-end rounded-bottom" id="accordionExample" style="margin-left: 5%; width: 90%;">
    <p class="h2 fw-bold">
      Course Details</p>
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button fw-bold fs-5 py-2" type="button" data-bs-toggle="collapse"
          data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Chapter 1: Introduction
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse fs-5 collapse" aria-labelledby="headingOne"
        data-bs-parent="#accordionExample">
        <div class="accordion-body py-2">
          Overall
        </div>
      </div>
    </div>
  </div>

  {{! Recommend }}

  <hr class="my-5 text-dark" style="height: 1px;" />

  <div class="container-fluid p-0" style="width: 90%">
    <p class="h2 fw-bold">Recommend</p>
    <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex rounded-end rounded-bottom">
        <img src="/public/images/details.jpg" style="background-repeat: no-repeat; height: 80px; width: 80px; "
          class="rounded align-self-center" />
        <div class="px-2 me-auto">
          <div class="fs-5 fw-bold m-0">Java Application</div>
          <div class="fs-6">Short description</div>
          5<i class="fa fa-star fa-sm text-secondary" title="Bad"></i>
        </div>
        <div class="px-2 d-flex flex-column align-self-center">
          <button type="button"
            class="btn btn-secondary btn-lg p-1 mb-1">&nbsp;&nbsp;&nbsp;Visit&nbsp;&nbsp;&nbsp;</button>
          <button type="button" class="btn btn-outline-secondary btn-lg p-1"><i class="fas fa-heart"></i></button>
        </div>
      </li>
    </ul>

  </div>

  {{! Comment }}
  <hr class="my-5 text-dark" style="height: 1px;" />

  <div class="card container-fluid rounded-end rounded-bottom p-0 row d-flex justify-content-center mx-auto"
    style="width: 90%">
    <p class="h2 fw-bold">Comment</p>

    <div class="card-header bg-white">
      <div class="d-flex flex-start">
        <img class="rounded-circle shadow-1-strong me-3"
          src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60" height="60" />
        <div class="form-outline w-100 fs-4">
          <label class="form-label" for="textAreaExample">Message</label>
          <textarea class="form-control" id="textAreaExample" rows="4" style="background: #fff;"></textarea>
        </div>
      </div>
      <div class="d-flex justify-content-end pt-1">
        <div>
          <ul class="rating d-inline-flex list-inline mx-3 fs-1 my-0 pt-1" data-mdb-toggle="rating">
            <li><i class="far fa-star fa-sm text-secondary" title="Bad"></i></li>
            <li><i class="far fa-star fa-sm text-secondary" title="Poor"></i></li>
            <li><i class="far fa-star fa-sm text-secondary" title="OK"></i></li>
            <li><i class="far fa-star fa-sm text-secondary" title="Good"></i></li>
            <li><i class="far fa-star fa-sm text-secondary" title="Excellent"></i></li>
          </ul>
        </div>
        <button class="btn btn-secondary btn-lg my-auto">Post comment</button>
      </div>
    </div>

    <hr class="my-0" style="height: 1px;" />
    {{#each cmt}}
    <div class="card-body">
      <div class="d-flex flex-start align-items-center">
        <img class="rounded-circle shadow-1-strong me-3"
          src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="80" height="80" />
        <div class="me-auto">
          <h6 class="fw-bold mb-1 fs-4">{{this.Person}}</h6>
          <p class="text-muted small mb-0 fs-5">
            {{this.Date}}
          </p>
        </div>
        <div class="rating d-flex fs-5">
          <i class="far fa-star text-secondary" style="line-height: unset" title="Bad"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="Poor"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="OK"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="Good"></i>
          <i class="far fa-star text-secondary" style="line-height: unset" title="Excellent"></i>
        </div>
      </div>

      <p class="mt-3 mb-4 pb-2 fs-5">
        {{this.Content}}
      </p>
    </div>
    <hr class="my-3" style="height: 1px;" />
    {{/each}}
    <ul class="pagination pagination-lg justify-content-center">
      <li class="page-item">
        <a class="page-link text-secondary fw-bold" href="?page=" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <li class="page-item"><a class="page-link text-secondary fw-bold" href="?page=">1</a></li>
      <li class="page-item"><a class="page-link text-secondary fw-bold" href="?page=">2</a></li>
      <li class="page-item"><a class="page-link text-secondary fw-bold" href="?page=">3</a></li>
      <li class="page-item">
        <a class="page-link text-secondary fw-bold" href="?page=" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    </ul>
  </div>

</div>