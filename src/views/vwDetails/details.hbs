          <div class="card-body">
            <div class="d-flex flex-start align-items-center">
              <img class="rounded-circle shadow-1-strong me-3"
                src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" 
                width="80"
                height="80" />
              <div class="me-auto">
                <h6 class="fw-bold text-primary mb-1 fs-4">{{this.Person}}</h6>
                <p class="text-muted small mb-0 fs-5">
                  {{this.Date}}
                </p>
              </div>
              <div class="rating d-flex fs-5" >
                <i class="far fa-star text-secondary" style="line-height: unset" title="Bad"></i>
                <i class="far fa-star text-secondary" style="line-height: unset" title="Poor"></i>
                <i class="far fa-star text-secondary" style="line-height: unset" title="OK"></i>
                <i class="far fa-star text-secondary" style="line-height: unset" title="Good"></i>
                <i class="far fa-star text-secondary" style="line-height: unset" title="Excellent"></i>
              </div>
            </div>

            <p class="mt-3 mb-4 pb-2 fs-5">
              {{this.Content}}
            </p>
          </div>
          <hr class="my-3" style="height: 1px;" />
