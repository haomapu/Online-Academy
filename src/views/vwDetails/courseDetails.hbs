<style>
    @media only screen and (max-device-width : 480px) {
        .table-reponsive {
            height: 300px !important;
        }
    }

    .table-responsive {
        overflow-y: scroll;
        height: 500px;
    }
</style>

<div class="container">
    {{!-- <div class="col-8">
        <div class="ratio ratio-16x9">
            <iframe id="video" class="" src=""></iframe>
        </div>
        <h4>Course Name</h4>
    </div> --}}
    {{!-- <div class="border col-sm-4 table-responsive" id="content"> --}}
        <div class="accordion open rounded-end rounded-bottom" id="accordionExample">
            <p class="h2 fw-bold">
                Course Details</p>
            {{#if course.chapters}}
            {{#each course.chapters}}
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-{{@index}}">
                    <button class="accordion-button fw-bold fs-5 py-2" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse-{{@index}}" aria-expanded="true" aria-controls="collapse-{{@index}}">
                        Chapter {{add_one @index}}: {{this.name}}
                    </button>
                </h2>


                <div id="collapse-{{@index}}" class="accordion-collapse fs-5 collapse"
                    aria-labelledby="heading-{{@index}}" data-bs-parent="#accordionExample">
                    <div class="d-flex">
                        {{#each (lookup ../chapters @index)}}
                        {{#each this}}
                        {{#each this}}

                        <button class="btn btn-primary" id="btn-lesson-{{this.name}}-{{@index}}" type="button" data-bs-toggle="collapse"
                            data-bs-target="#lesson-{{this.name}}-{{@index}}" aria-expanded="false"
                            aria-controls="#lesson-{{this.name}}-{{@index}}">Toggle second element</button>
                        {{/each}}
                        {{/each}}
                        {{/each}}
                    </div>
                    {{#each (lookup ../chapters @index)}}
                    {{#each this}}
                    {{#each this}}
                    <div class="collapse multi-collapse" id="lesson-{{this.name}}-{{@index}}">
                        <div class="card card-body">
                            <div class="ratio ratio-16x9">
                                <iframe id="video" class=""
                                    src="data:video/mp4;base64,{{toBase64 this.video.img.image}}"></iframe>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/each}}
                    {{/each}}
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="h4 text-secondary">Updating...</div>

            {{/if}}
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $('body').on('click', '[id^=btn-lesson]', function{
        $('[id^=lesson].show').removeClass('show');
    })
</script>