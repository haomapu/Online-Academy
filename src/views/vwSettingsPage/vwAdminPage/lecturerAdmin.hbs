<style>
  @media screen and (max-width: 940px) {
    .mainContent li span {
      display: none;
    }

    a span {
      display: none;
    }
  }

  .mainContent li.nav-item:hover {
    background: #f05462;
  }
</style>

<div class="d-flex">
  <div class="mainContent d-flex flex-nowrap fs-5" style="min-height: 85vh; overflow-x: auto; overflow-y: hidden;">
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light w-100">
      <hr />
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/settings" class="nav-link link-dark">
            <i class="fa-regular fa-address-card"></i>
            <span>Profile</span>
          </a>
        </li>
        {{#if admin}}
        <li class="nav-item">
          <a href="/settings/dashboard" class="nav-link link-dark">
            <i class="fa-solid fa-table-columns"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings/category" class="nav-link link-dark">
            <i class="fas fa-grip-horizontal"></i>
            <span>Categories</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings/courseAdmin" class="nav-link link-dark">
            <i class="fas fa-book"></i>
            <span>CoursesA</span>
          </a>
        </li>
        <div class="dropdown">
          <a class="btn dropdown-toggle nav-link link-dark" href="#" role="button" data-bs-toggle="dropdown"
            aria-expanded="false">
            <i class="fas fa-users"></i>
            <span>Users</span>
          </a>
          <ul class="dropdown-menu">
            <li class="nav-item dropdown-item">
              <a href="/settings/lecturerAdmin" class="nav-link active" aria-current="page">
                <i class="fas fa-users"></i>
                <span>Lecturers</span>
              </a>
            </li>
            <li class="nav-item dropdown-item">
              <a href="/settings/studentAdmin" class="nav-link link-dark">
                <i class="fas fa-users"></i>
                <span>Students</span>
              </a>
            </li>
          </ul>
        </div>
        {{/if}}
        {{#if student}}
        <li class="nav-item">
          <a href="/settings/favourite" class="nav-link link-dark">
            <i class="fas fa-book"></i>
            <span>Favorite</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings/courseStudent" class="nav-link link-dark">
            <i class="fas fa-book"></i>
            <span>CoursesS</span>
          </a>
        </li>
        {{/if}}
        {{#if lecturer}}
        <li class="nav-item">
          <a href="/settings/courseLecture" class="nav-link link-dark">
            <i class="fas fa-book"></i>
            <span>CoursesL</span>
          </a>
        </li>
        {{/if}}
      </ul>
      <hr />
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <a class="nav-link link-dark" href="#">
            <i class="fa-solid fa-right-from-bracket"></i><span>Logout</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="container" style="flex: 3">
    <div class="card">
      <h4 class="card-header">
        Lecturers
      </h4>
      <form action="" method="post" id="frmDelItem">
        <input type="hidden" id="txtDelProID" name="id">
      </form>
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="text-center">#</th>
            <th>avatar</th>
            <th>username</th>
            <th>role</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.lecturers}}
          <tr>
            <td scope="row" class="text-center">{{id}}</td>
            <td><img src={{avatar}} alt="" class="rounded-circle p-1 bg-secondary" width="50" /></td>
            <td>{{username}}</td>
            <td>{{role}}</td>
            <td>
              <form method="post">
                <button class=" btn btn-sm btn-secondary delItem"
                  formaction="/settings/LecturerAdmin/studentRole/{{_id}}">
                  <i class="fa-solid fa-turn-down"></i>
                </button>
                {{#if verified}}
                <button class=" btn btn-sm btn-danger delItem" formaction="/settings/lecturerAdmin/lock/{{_id}}">
                  <i class="fa-solid fa-unlock"></i>
                </button>
                {{else}}
                <button class=" btn btn-sm btn-danger delItem" formaction="/settings/lecturerAdmin/unlock/{{_id}}">
                  <i class="fa-solid fa-lock"></i>
                </button>
                {{/if}}
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="d-flex justify-content-center pt-4">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item" style="color: se;">
              <a class="page-link text-dark fs-5" href="?page=" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span></a>
            </li>
            {{#each pageNumbers}}
            {{#if isCurrent}}
            <li class="page-item active" aria-current="page">
              <span class="page-link bg-light border-secondary text-dark fs-5">{{value}}</span>
            </li>
            {{else}}
            <li class="page-item">
              <a class="page-link text-dark fs-5" href="?page={{value}}">{{value}}</a>
            </li>
            {{/if}}
            {{/each}}
            <a class="page-link text-dark fs-5" href="?page=" aria-label="Next">
              <span aria-hidden="true">&raquo;</span></a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>
</div>