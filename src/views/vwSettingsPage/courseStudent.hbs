<style>
  @media screen and (max-width: 940px) {
    .mainContent li span {
      display: none;
    }
  }

  .mainContent li.nav-item:hover {
    background: #f05462;
  }
</style>

<div class="d-flex">
  <div class="mainContent d-flex flex-nowrap fs-5" style="min-height: 100vh; overflow-x: auto; overflow-y: hidden;">
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light w-100">
      <hr />
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/settings" class="nav-link link-dark">
            <i class="fa-regular fa-address-card"></i>
            <span>Profile</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings/dashboard" class="nav-link link-dark">
            <i class="fa-solid fa-table-columns"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link link-dark">
            <i class="fas fa-grip-horizontal"></i>
            <span>Categories</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings/favourite" class="nav-link link-dark">
            <i class="fas fa-book"></i>
            <span>Favorite</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings/courseLecture" class="nav-link link-dark">
            <i class="fas fa-book"></i>
            <span>CoursesL</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="/settings/courseStudent" class="nav-link active" aria-current="page">
            <i class="fas fa-book"></i>
            <span>CoursesS</span>
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link link-dark">
            <i class="fas fa-users"></i>
            <span>Users</span>
          </a>
        </li>
      </ul>
      <hr />
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <a class="nav-link link-dark" href="#">
            <i class="fa-solid fa-right-from-bracket"></i><span>Logout</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <div class="container">
    <dic class="d-flex flex-column">
      <h2 class="mt-3 ml-5">Your Course</h2>
      <hr style="margin-top: -10px;" />
      <div class="d-flex flex-column pt-3">
        {{#each this.courses}}
        <div class="d-flex flex-row shadow py-3">
          <a href="/course/{{name}}" class="w-25"><img src={{img}} alt="imageCourse" class="py-2 ms-2"
              style="width: 100%; height: 100%" /></a>
          <div class="d-flex justify-content-between h-75" style="width: 100%; padding-right: 15px;">
            <div class="d-flex flex-column ps-4 w-50">
              <div>{{name}}</div>
              <div>Students: {{register_count}}</div>
              <div>Lecture: {{author}}</div>
            </div>
            <div class="d-flex flex-column text-end">
              <div>Update: {{format_date lastUpdate}}</div>
              <div>Status: Finish</div>
              <div class="d-flex flex-row-reverse">
                <button class="btn btn-secondary text-light" type="submit" form="myform" name="nameCou"
                  value="{{this.name}}" id="btnFav">Remove</button>
              </div>
            </div>
          </div>
        </div>
        {{/each}}


        <div class="d-flex justify-content-center pt-4">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item" style="color: se;">
                <a class="page-link text-dark fs-5" href="?page=" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span></a>
              </li>
              {{#each pageNumbers}}
              {{#if isCurrent}}
              <li class="page-item active" aria-current="page">
                <span class="page-link bg-light border-secondary text-dark fs-5">{{value}}</span>
              </li>
              {{else}}
              <li class="page-item">
                <a class="page-link text-dark fs-5" href="?page={{value}}">{{value}}</a>
              </li>
              {{/if}}
              {{/each}}
              <a class="page-link text-dark fs-5" href="?page=" aria-label="Next">
                <span aria-hidden="true">&raquo;</span></a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
  </div>
</div>
</div>

<form method="post" id="myform" action="/settings/courseStudent/remove">
</form>