<!-- Header-->
<header class="masthead text-center text-white">
  <div class="masthead-content">
    <div class="container px-5">
      <h1 class="fw-bold masthead-heading mb-0">Online Academy</h1>
      <h2 class="masthead-subheading mb-0">Will Rock Your Socks Off</h2>
      <a class="btn btn-primary btn-xl rounded-pill mt-5" href="#scroll">Learn
        More</a>
    </div>
  </div>
  <div class="bg-circle-1 bg-circle"></div>
  <div class="bg-circle-2 bg-circle"></div>
  <div class="bg-circle-3 bg-circle"></div>
  <div class="bg-circle-4 bg-circle"></div>
</header>

<div class="mt-1 border-top border-bottom container-fluid d-flex justify-content-center">
      {{#each highlightCategories}}
      <div class="fs-5 px-2">
        <h><input class="btn" name="main_cat" value="{{this.name}}" type="submit" form="searchCat" /></h>
      </div>
      {{/each}}
</div>

<section id="scroll">
  <div class="container p-4">
    <span class="lead fs-1 fst-talic f-title">
      Weekly recommended courses
    </span>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
          aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
          aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner rounded-5 shadow">
        {{#each highlightCourse_active}}
        <div class="carousel-item active">
          <img src="{{this.img}}" height="540" class="d-block w-100" alt="..." />
          <div class="carousel-caption d-none d-md-block">
            <a class="rounded-lg fw-bold btn btn-dark btn-block" href="/course/{{this.name}}" role="button"><span
                class="h5 fw-bold">{{this.name}}</span></a>
          </div>
        </div>
        {{/each}}
        {{#each highlightCourse_inactive}}
        <div class="carousel-item">
          <img src="{{this.img}}" height="540" class="d-block w-100" alt="..." />
          <div class="carousel-caption d-none d-md-block">
            <a class="rounded-lg fw-bold btn btn-dark btn-block" href="/course/{{this.name}}" role="button"><span
                class="h5 fw-bold">{{this.name}}</span></a>
          </div>
        </div>
        {{/each}}
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <!-- Carousel wrapper -->

    {{! Carousel Slide }}
  </div>
</section>

<div class="container">
  <div class="m-2">
    <ul class="nav nav-tabs" id="myTab">
      <li class="nav-item">
        <a href="#newest" class="nav-link active fw-bold text-dark">Newest</a>
      </li>
      <li class="nav-item">
        <a href="#mostviewed" class="nav-link fw-bold text-dark">Most Viewed</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="newest">
        <div id="carouselExampleDark1" class="carousel carousel-dark slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="col-12">
              <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active" data-bs-interval="10000">
                    {{#if newCourse.[0]}}
                    <div class="row">
                      {{#each newCourse.[0]}}
                      <div class="col-md-3 col-lg-3 mb-3 d-flex align-items-stretch">
                        <div class="card">
                          <a href="/course/{{this.name}}"><img class="img-fluid card-img-top" alt="100%x280"
                              src="{{this.img}}" /></a>
                          <div class="card-body">
                            <h4 class="card-title fw-bold">{{this.name}}</h4>
                            <p class="card-text fs-6">{{this.overview}}</p>
                          </div>
                          <a href="#" class="btn btn-primary m-3 align-self-start">{{format_number this.price}}</a>
                        </div>
                      </div>
                      {{/each}}
                    </div>
                    {{/if}}
                  </div>
                  <div class="carousel-item " data-bs-interval="2000">
                    {{#if newCourse.[1]}}
                    <div class="row">
                      {{#each newCourse.[1]}}
                      <div class="col-md-3 col-lg-3 mb-3 d-flex align-items-stretch">
